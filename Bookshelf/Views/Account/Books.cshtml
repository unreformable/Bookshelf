                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Tytuł</th>
                        <th scope="col">Autor</th>
                    </tr>
                </thead>
                <tbody>
                    <!--foreach (var book in books) dla każdego wyniku dodaj -->
                    {
                        <tr>
                            <td>1</td> <!--tutaj indeks wyniku (po prostu po kolei 1 2 3 4...)-->
